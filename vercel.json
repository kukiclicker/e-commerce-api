{
    "version": 2,
    "builds":[
        {
            "src":"apps/categories-service/src/main.ts",
            "use":"@vercel/node"
        },
        {
            "src":"apps/products-service/src/main.ts",
            "use":"@vercel/node"
        }
    ],
    "routes":[
        {
            "src":"/(.*)",
